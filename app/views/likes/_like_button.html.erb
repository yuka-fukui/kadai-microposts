  <% if current_user.like?(micropost) %>
    <%= form_for(current_user.likes.find_or_create_by(micropost_id: micropost.id), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :micropost_id, micropost.id %>
      <%= f.submit'Likeを解除', class: 'btn btn-warning btn-xs' %>
    <% end %>
  <% else %>
    <%= form_for(current_user.likes.build) do |f| %>
      <%= hidden_field_tag :micropost_id, micropost.id %>
      <%= f.submit 'Like', class: 'btn btn-info btn-xs' %>
    <% end %>
  <% end %>
